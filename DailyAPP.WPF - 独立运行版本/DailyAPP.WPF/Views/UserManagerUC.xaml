<UserControl
    x:Class="DailyAPP.WPF.Views.UserManagerUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:DailyAPP.WPF.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:pwdEx="clr-namespace:DailyAPP.WPF.Extensions"
    xmlns:viewmodels="clr-namespace:DailyAPP.WPF.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:UserManagerUCViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <local:RowIndexConverter x:Key="RowIndexConverter" />
    </UserControl.Resources>

    <DockPanel x:Name="UserManager">


        <!--  顶栏  -->
        <DockPanel DockPanel.Dock="Top">
            <WrapPanel Margin="10" DockPanel.Dock="Left">
                <TextBlock
                    Margin="10,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="20"
                    Text="用户名称：" />
                <TextBox
                    x:Name="SearchTextBox"
                    Width="150"
                    Height="28"
                    Margin="10,5,0,0"
                    VerticalAlignment="Top"
                    md:HintAssist.Hint="输入要搜索的用户"
                    IsEnabled="True"
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap" />
                <Button
                    Width="80"
                    Height="28"
                    Margin="10,5,0,0"
                    ToolTip="Resource name: MaterialDesignRaisedLightDarkButton">
                    <StackPanel Orientation="Horizontal">
                        <md:PackIcon
                            Width="16"
                            Height="16"
                            Margin="0,0,4,0"
                            Kind="Magnify" />
                        <TextBlock Text="搜索" />
                    </StackPanel>
                </Button>
                <Button
                    Width="80"
                    Height="28"
                    Margin="10,5,0,0"
                    ToolTip="Resource name: MaterialDesignRaisedLightDarkButton">
                    <StackPanel Orientation="Horizontal">
                        <md:PackIcon
                            Width="16"
                            Height="16"
                            Margin="0,0,4,0"
                            Kind="Restart" />
                        <TextBlock Text="重置" />
                    </StackPanel>
                </Button>
            </WrapPanel>

            <WrapPanel
                Margin="10"
                HorizontalAlignment="Right"
                DockPanel.Dock="Right">
                <Button
                    Width="80"
                    Height="28"
                    Margin="10,5,0,0"
                    Command="{Binding ShowAddUserCmm}">
                    <StackPanel Orientation="Horizontal">
                        <md:PackIcon
                            Width="16"
                            Height="16"
                            Margin="0,0,4,0"
                            Kind="AccountPlus" />
                        <TextBlock Text="添加" />
                    </StackPanel>
                </Button>
                <Button
                    Width="80"
                    Height="28"
                    Margin="10,5,0,0">
                    <StackPanel Orientation="Horizontal">
                        <md:PackIcon
                            Width="16"
                            Height="16"
                            Margin="0,0,4,0"
                            Kind="AccountEdit" />
                        <TextBlock Text="编辑" />
                    </StackPanel>
                </Button>
            </WrapPanel>
        </DockPanel>

        <md:DialogHost>

            <md:DrawerHost IsRightDrawerOpen="{Binding IsShowAddUser}">
                <md:DrawerHost.RightDrawerContent>
                    <DockPanel
                        Width="300"
                        Background="{DynamicResource MaterialDesignDarkBackground}"
                        LastChildFill="False">
                        <TextBlock
                            Margin="20,10"
                            DockPanel.Dock="Top"
                            FontSize="20"
                            FontWeight="Bold"
                            Text="添加备忘录" />


                        <TextBox
                            Margin="20,10"
                            md:HintAssist.Hint="请输入用户名"
                            DockPanel.Dock="Top" />
                        <TextBox
                            MinHeight="100"
                            Margin="20,0"
                            md:HintAssist.Hint="请输入账号"
                            DockPanel.Dock="Top" />
                        <PasswordBox
                            Margin="0,10"
                            md:HintAssist.Hint="请输入密码"
                            pwdEx:PasswordBoxExtend.Pwd="{Binding AccountInfoDTO.Pwd, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            DockPanel.Dock="Top">
                            <i:Interaction.Behaviors>
                                <pwdEx:PasswordBoxBehavior />
                            </i:Interaction.Behaviors>
                        </PasswordBox>
                        <PasswordBox
                            Margin="0,10"
                            md:HintAssist.Hint="请再次输入密码"
                            pwdEx:PasswordBoxExtend.Pwd="{Binding AccountInfoDTO.ConfrmPwd, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            DockPanel.Dock="Top">
                            <i:Interaction.Behaviors>
                                <pwdEx:PasswordBoxBehavior />
                            </i:Interaction.Behaviors>
                        </PasswordBox>
                        <Button
                            Margin="20,0"
                            Content="添加新用户"
                            DockPanel.Dock="Top" />
                    </DockPanel>


                </md:DrawerHost.RightDrawerContent>
                <md:TransitioningContent OpeningEffect="{md:TransitionEffect Kind=ExpandIn}" />
            </md:DrawerHost>
        </md:DialogHost>

        <!--  数据栏  -->
        <DataGrid
            x:Name="dataGrid"
            Margin="0,20,0,0"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            ItemsSource="{Binding UserList}">
            <DataGrid.Columns>
                <!--  选择列  -->
                <DataGridCheckBoxColumn
                    Width="60"
                    Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                    Header="选择"
                    IsReadOnly="False" />
                <DataGridTextColumn
                    Width="*"
                    MinWidth="50"
                    MaxWidth="100"
                    Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Converter={StaticResource RowIndexConverter}}"
                    CanUserSort="False"
                    Header="行号" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding UserName}"
                    CanUserSort="False"
                    Header="用户名" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding UserRoles}"
                    CanUserSort="False"
                    Header="角色" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding CreateTime, StringFormat=yyyy-MM-dd HH:mm:ss}"
                    CanUserSort="False"
                    Header="创建时间" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding LastModifiedTime, StringFormat=yyyy-MM-dd HH:mm:ss}"
                    CanUserSort="False"
                    Header="修改时间" />
            </DataGrid.Columns>


            <!--  分页  -->
        </DataGrid>
    </DockPanel>
</UserControl>
