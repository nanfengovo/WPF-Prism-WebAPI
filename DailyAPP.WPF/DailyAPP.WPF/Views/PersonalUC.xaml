<UserControl
    x:Class="DailyAPP.WPF.Views.PersonalUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DailyAPP.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  第一行  -->
        <StackPanel Margin="0,10" Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Text="浅色" />

            <ToggleButton Margin="8,0,16,0" IsChecked="{Binding IsDarkTheme}" />

            <TextBlock VerticalAlignment="Center" Text="深色" />
        </StackPanel>
    </Grid>
</UserControl>
